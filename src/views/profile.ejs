<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/profile.css">
</head>
<body>
    <%- include("partials/nav.ejs") %>
    <div class="profile-container">
        <h1><%= title %></h1>
        
        <div class="profile-info">
            <p><strong>Name:</strong> <%= user.name %></p>
            <% if (currentUser.role === "admin") { %>
                <p><strong>Email:</strong> <%= user.email %></p>
                <p><strong>Role:</strong> <%= user.role %></p>
            <% } %>
        </div>
        
        <div class="songs-section">
            <h2>Tracked Songs</h2>
            <% if (user.trackedSongs.length > 0) { %>
                <ul>
                    <% user.trackedSongs.forEach(song => { %>
                        <li class="song-item">
                            <a href="/songs/<%= song.songId %>" class="song-link"><%= song.songName %></a>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p class="no-songs">No tracked songs yet.</p>
            <% } %>
        </div>
        
        <div class="songs-section">
            <h2>Completed Songs</h2>
            <% if (user.completedSongs.length > 0) { %>
                <ul>
                    <% user.completedSongs.forEach(song => { %>
                        <li class="song-item">
                            <a href="/songs/<%= song.songId %>" class="song-link"><%= song.songName %></a>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p class="no-songs">No completed songs yet.</p>
            <% } %>
        </div>
    </div>
</body>
</html>