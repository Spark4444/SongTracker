        <div class="modal-header">
            <h3 id="confirm-title">Confirm</h3>
        </div>
        <div class="modal-body">
            <p id="confirm-message"></p>
        </div>
        <div class="modal-footer">
            <button id="confirm-cancel-btn" class="btn btn-secondary">Cancel</button>
