<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/profile.css">
    <link rel="stylesheet" href="/css/modal.css">
</head>
<body>
    <%- include("partials/nav.ejs") %>
    <%- include("partials/alert.ejs") %>
    <%- include("partials/confirm.ejs") %>
    <div class="profile-container">
        <div class="profile-header">
            <h1>Profile</h1>
        </div>
        
        <div class="profile-info">
            <p><strong>Name:</strong> <%= user.name %></p>
            <p><strong>Email:</strong> <%= user.email %></p>
            <p><strong>Role:</strong> <%= user.role %></p>
            <button class="btn-logout" onclick="logout()">Logout</button>
        </div>
        
        <div class="songs-section">
            <h2>Tracked Songs</h2>
            <% if (user.trackedSongs && user.trackedSongs.length > 0) { %>
                <ul>
                    <% user.trackedSongs.forEach((song, index) => { %>
                        <li class="song-item">
                            <a href="/songs/<%= song.songId %>" class="song-link"><%= index + 1 %>. <%= song.songName %> - <%= song.songAuthor %></a>
                            <div class="song-actions">
                                <button class="btn-complete" onclick="moveToCompleted('<%= song.songId %>', '<%= song.songName %>')">
                                    Mark Complete
                                </button>
                                <button class="btn-remove" onclick="removeSong('tracked', '<%= song.songId %>', '<%= song.songName %>')">
                                    Remove
                                </button>
                            </div>
                        </li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p class="no-songs">No tracked songs yet. Start tracking to see them here!</p>
            <% } %>
        </div>
        
        <div class="songs-section">
            <h2>Completed Songs</h2>
            <% if (user.completedSongs && user.completedSongs.length > 0) { %>
                <ul>
                    <% user.completedSongs.forEach((song, index) => { %>
                        <li class="song-item">
                            <a href="/songs/<%= song.songId %>" class="song-link"><%= index + 1 %>. <%= song.songName %> - <%= song.songAuthor %></a>
                            <div class="song-actions">
                                <button class="btn-remove" onclick="removeSong('completed', '<%= song.songId %>', '<%= song.songName %>')">
                                    Remove
                                </button>
                            </div>
                        </li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p class="no-songs">No completed songs yet.</p>
            <% } %>
        </div>
    </div>

    <script src="/js/utils/alert.js"></script>
    <script src="/js/utils/confirm.js"></script>
    <script src="/js/profileActions.js"></script>
</body>
</html>