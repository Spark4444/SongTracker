datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                String            @id @default(cuid())
  name              String
  email             String            @unique
  password          String
  createdAt         DateTime          @default(now())
  trackedSongs      TrackedSong[]
  completedSongs    CompletedSong[]
}

model TrackedSong {
  id        String   @id @default(cuid())
  userId    String
  songId    String
  // Save song name to reduce amount of requests for display
  songName  String
  addedAt   DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, songId])
  @@index([userId])
}

model CompletedSong {
  id        String   @id @default(cuid())
  userId    String
  songId    String
  // Save song name to reduce amount of requests for display
  songName  String
  completedAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, songId])
  @@index([userId])
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
