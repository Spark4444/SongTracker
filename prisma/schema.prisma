generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(cuid())
  name           String
  email          String          @unique
  password       String
  createdAt      DateTime        @default(now())
  role           String          @default("user")
  completedSongs CompletedSong[]
  trackedSongs   TrackedSong[]
}

model TrackedSong {
  id         String   @id @default(cuid())
  userId     String
  songId     String
  songName   String
  songAuthor String
  addedAt    DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, songId])
  @@index([userId])
}

model CompletedSong {
  id          String   @id @default(cuid())
  userId      String
  songId      String
  songName    String
  songAuthor  String
  completedAt DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, songId])
  @@index([userId])
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
